{
  "version": 2,
  "builds": [
    {
      "src": "backend/src/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "rewrites": [
    {
      "source": "/api/:match*",
      "destination": "/backend/src/server.js"
    },
    {
      "source": "/:all*.(js|css|svg|png|jpg|jpeg|gif|ico|json|txt|woff2)",
      "destination": "/frontend/dist/:all*.:1"
    },
    {
      "source": "/:path*",
      "destination": "/frontend/dist/index.html"
    }
  ]
}